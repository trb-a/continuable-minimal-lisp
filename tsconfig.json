{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "es6",
      "dom"
    ],
    "rootDir": ".",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist/types",
    "baseUrl": "./",
    "paths": {
        "*": [
            "src/*",
        ]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.*"],
}
