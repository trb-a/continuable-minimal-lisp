{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": [
      "es6",
      "dom"
    ],
    "rootDir": ".",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
        "*": [
            "src/*",
        ]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.*"],
}
