{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "module": "commonjs",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "es6",
      "dom"
    ],
    "rootDir": ".",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
        "*": [
            "src/*",
        ]
    },
  },
  "exclude": [
    "node_modules",
    "dist",
    "docs",
  ],
}
